<?xml version="1.0" encoding="UTF-8"?>

<!-- NewCoach.fxml -->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="272.0" prefWidth="325.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.npcbasketball.Controllers.NewCoachController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox prefHeight="124.0" prefWidth="76.0">
        <Label prefHeight="25.0" prefWidth="35.0" text="Name:" />
        <Label prefHeight="25.0" prefWidth="24.0" text="Age:" />
        <Label prefHeight="25.0" prefWidth="31.0" text="Email:" />
        <Label prefHeight="25.0" prefWidth="45.0" text="Coach:" />
        <Label prefHeight="25.0" prefWidth="39.0" text="YOE:" />
        <Label prefHeight="25.0" prefWidth="47.0" text="Salary:" />
        <Label prefHeight="25.0" prefWidth="35.0" text="Status:" />
    </VBox>
    <VBox fx:id="vbxTextFields" prefHeight="232.0" prefWidth="225.0">
        <HBox>
            <TextField fx:id="tfName" />
            <ImageView fitHeight="25.0" fitWidth="50.0" />
        </HBox>
        <HBox>
            <TextField fx:id="tfAge" />
            <ImageView fitHeight="25.0" fitWidth="50.0" />
        </HBox>
        <HBox>
            <TextField fx:id="tfEmail" />
            <ImageView fitHeight="25.0" fitWidth="50.0" />
        </HBox>
        <HBox>
            <TextField fx:id="tfCoachPos" />
            <ImageView fitHeight="25.0" fitWidth="50.0" />
        </HBox>
        <HBox>
            <TextField fx:id="tfYOE" />
            <ImageView fitHeight="25.0" fitWidth="50.0" />
        </HBox>
        <HBox>
            <TextField fx:id="tfSalary" />
            <ImageView fitHeight="25.0" fitWidth="50.0" />
        </HBox>
        <Label fx:id="lblResult" prefHeight="27.0" prefWidth="145.0" text="Label" />
        <HBox prefHeight="51.0" prefWidth="143.0">
            <Button onAction="#onSaveDataClick" prefHeight="25.0" prefWidth="72.0" text="Save Data!" />
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="51.0" prefWidth="107.0">
                <Button mnemonicParsing="false" onAction="#onArchiveDataClick" text="Archive to File" />
            </VBox>
        </HBox>
    </VBox>
</HBox>
